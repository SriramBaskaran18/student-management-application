<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "com.i2i.sms.model.Role" table = "role">
        <id name = "id" type = "int" column = "role_id">
            <generator class = "increment"/>
        </id>
        <property name = "name" column = "name"/>
        <set name = "students" table = "student_role" cascade = "persist" inverse = "true" fetch = "join">
            <key column = "role_id" not-null = "true" />
            <many-to-many column = "student_id" class = "com.i2i.sms.model.Student"/>
        </set>
    </class>
</hibernate-mapping>
