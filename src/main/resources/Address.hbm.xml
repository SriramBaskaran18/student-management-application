<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "com.i2i.sms.model.Address" table = "address">
        <id name = "id" type = "int">
            <column name = "address_id"/>
            <generator class = "increment"/>
        </id>
        <property name = "doorNumber" type = "string" column = "door_number"/>
        <property name = "street" type = "string" column = "street"/>
        <property name = "city" type = "string" column = "city"/>
        <property name = "state" type = "string" column = "state"/>
        <property name = "zipcode" type = "int" column = "zipcode"/>
        <property name = "mobileNumber" type = "string" column = "mobile_number"/>
        <one-to-one name = "student" class = "com.i2i.sms.model.Student"/>
    </class>
</hibernate-mapping>
